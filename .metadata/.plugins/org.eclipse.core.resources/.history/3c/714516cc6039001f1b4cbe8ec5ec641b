#ifndef SRC_ZED_AXI_CONFIG_H_
#define SRC_ZED_AXI_CONFIG_H_

#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <stdarg.h>
#include <string.h>
#include <time.h>
#include <stdbool.h>

#define SERVICE_UIO_DEVICE_NAME    		"/dev/uio0"
#define DONOR_UIO_DEVICE_NAME    		"/dev/uio1"
#define MMAP_SIZE    			(0x10000)


typedef struct
{
	uint32_t *service_config;
	uint32_t *donor_config;
}axi_bus_base_address_type;

typedef struct
{
	uint32_t service_config_val;
	uint32_t donor_config_val;
}axi_bus_read_val_type;


bool axi_serviceConfigBusInitialize(void);
bool axi_donorConfigBusInitialize(void);

bool axi_serviceConfigWrite(uint32_t data);
bool axi_donorConfigWrite(uint32_t data);

uint32_t axi_serviceConfigRead(void);
uint32_t axi_donorConfigRead(void);

extern axi_bus_base_address_type axi_bus_base_address;
extern axi_bus_read_val_type axi_bus_read_val;
#endif /* SRC_ZED_AXI_CONFIG_H_ */
